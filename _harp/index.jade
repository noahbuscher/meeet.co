  head
    title Meeet
    meta(name="description" content="Meeet connects developers and designers working on side projects.")
    meta(name="keywords" content="side, projects, find, develop, design, partner")
    meta(name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=1.0, minimal-ui")
    link(rel="icon", type="image/png", href="assets/images/favicons/Meeet-32x32.png")
    
